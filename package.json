{
  "name": "sopo-ds",
  "version": "0.0.8",
  "author": "ftery0",
  "type": "module",
  "types": "dist/index.d.ts",
  "license":"MIT",
  "description": "SOPO 디자인 시스템",
  "main": "dist/index.js",
  "private": false,
  "dependencies": {
    "@sopo-web/assets": "workspace:*",
    "@sopo-web/components": "workspace:*",
    "@sopo-web/hooks": "workspace:*",
    "@sopo-web/foundations": "workspace:*",
    "@sopo-web/styles": "workspace:*"
  },
  "keywords": [
    "react",  
    "ui",
    "design-system",
    "react-components",
    "components",
    "emotion",
    "typescript",
    "library"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sopo2023/SOPO_Design_system.git"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@vitejs/plugin-react": "^4.3.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.4",
    "prettier": "^3.2.5",
    "turbo": "^2.0.9",
    "vite": "^5.3.4"
  },
  "scripts": {
     "build": "trubo run build",
    "prepare": "husky",
    "storybook": "turbo run storybook  --filter=./packages/components",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": "eslint"
  },
  "husky": {
    "scripts": {
      "postinstall": "husky install",
      "format": "prettier --cache --write .",
      "lint": "eslint --cache ."
    },
    "hooks": {
      "pre-commit": "pnpm lint-staged"
    }
  },
  "packageManager": "pnpm@9.1.2+sha256.19c17528f9ca20bd442e4ca42f00f1b9808a9cb419383cd04ba32ef19322aba7"
}
